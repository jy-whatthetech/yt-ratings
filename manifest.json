{
  "name": "Youtube Preview",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Preview ratings and top-voted comments on youtube videos in the search page.",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Youtube Ratings Preview",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "config.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "contentSettings"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Opens filter toolbar"
    },
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Generates Ratings Preview"
    }
  }
}